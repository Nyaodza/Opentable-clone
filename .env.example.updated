# OpenTable Clone - Environment Variables
# Copy to .env and fill in your values

# ================================
# APPLICATION
# ================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://username:password@localhost:5432/opentable_clone
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opentable_clone
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ================================
# REDIS
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# AUTHENTICATION
# ================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# ================================
# TWILIO SMS (NEW - CRITICAL)
# ================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Sign up at https://www.twilio.com/try-twilio
# Get $15 free credit to test SMS reminders
# Required for SMS reminders and no-show reduction

# ================================
# STRIPE PAYMENTS
# ================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ================================
# EMAIL
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# Or use SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# ================================
# AWS S3 (for file uploads)
# ================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ================================
# GOOGLE OAUTH
# ================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ================================
# FACEBOOK OAUTH
# ================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ================================
# OPENAI (for AI Concierge)
# ================================
OPENAI_API_KEY=sk-your_openai_api_key

# ================================
# BLOCKCHAIN (Ethereum/Polygon)
# ================================
ETHEREUM_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key
ETHEREUM_CHAIN_ID=137
SMART_CONTRACT_ADDRESS=your_deployed_contract_address
PRIVATE_KEY=your_wallet_private_key_for_contract_interaction

# ================================
# ELASTICSEARCH
# ================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme

# ================================
# MONITORING
# ================================
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key

# ================================
# FRONTEND SPECIFIC
# ================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BLOCKCHAIN=true
ENABLE_VR_EXPERIENCES=true
ENABLE_VOICE_COMMANDS=true
ENABLE_AI_CONCIERGE=true
ENABLE_SOCIAL_DINING=true
ENABLE_GUEST_BOOKING=true
ENABLE_DINE_NOW=true
ENABLE_GIFT_CARDS=true
ENABLE_SMS_REMINDERS=true

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# SECURITY
# ================================
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_change_this
ENCRYPTION_KEY=your_32_character_encryption_key

# ================================
# CRON JOBS
# ================================
ENABLE_REMINDER_SCHEDULER=true
REMINDER_CHECK_INTERVAL=15  # minutes

# ================================
# NOTES
# ================================
# CRITICAL for new features:
# 1. TWILIO_* variables - Required for SMS reminders
# 2. ENABLE_GUEST_BOOKING=true - Enable guest booking
# 3. ENABLE_DINE_NOW=true - Enable immediate seating feature
# 4. ENABLE_GIFT_CARDS=true - Enable gift card system
#
# To get Twilio credentials:
# 1. Sign up at https://www.twilio.com/try-twilio
# 2. Get Account SID and Auth Token from console
# 3. Get a phone number ($1/month or use trial number)
# 4. Free $15 credit for testing
