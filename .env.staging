# Staging Environment Variables
NODE_ENV=staging

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres-staging:5432/opentable_staging
REDIS_URL=redis://redis-staging:6379

# Authentication
JWT_SECRET=staging-jwt-secret-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=staging-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# API Configuration
PORT=3001
API_URL=https://staging-api.opentable-clone.com
FRONTEND_URL=https://staging.opentable-clone.com
CORS_ORIGIN=https://staging.opentable-clone.com

# GraphQL Configuration
GRAPHQL_ENDPOINT=https://staging-api.opentable-clone.com/graphql
GRAPHQL_SUBSCRIPTIONS_ENDPOINT=wss://staging-api.opentable-clone.com/graphql

# Blockchain Configuration (Mumbai Testnet)
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com/
BLOCKCHAIN_PRIVATE_KEY=your-testnet-private-key
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
POLYGON_SCAN_API_KEY=your-polygonscan-api-key

# OAuth Configuration (Test Apps)
GOOGLE_CLIENT_ID=your-google-test-client-id
GOOGLE_CLIENT_SECRET=your-google-test-client-secret
FACEBOOK_APP_ID=your-facebook-test-app-id
FACEBOOK_APP_SECRET=your-facebook-test-app-secret
APPLE_CLIENT_ID=your-apple-test-client-id
APPLE_PRIVATE_KEY=your-apple-test-private-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging-email@gmail.com
SMTP_PASS=staging-app-password

# File Upload Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=opentable-uploads-staging

# Payment Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-test-webhook-secret

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=your-staging-sentry-dsn

# Rate Limiting (More lenient for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=staging-session-secret

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_VR_FEATURES=true
ENABLE_AI_CONCIERGE=true
ENABLE_VOICE_COMMANDS=true
