# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=1.0.0
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opentable_clone
DB_USER=postgres
DB_PASSWORD=your_password

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# BCrypt Configuration
BCRYPT_ROUNDS=12

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=opentable:

# Performance Configuration
COMPRESSION_LEVEL=6
MAX_REQUEST_SIZE=10mb
RESPONSE_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=10

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
ADMIN_RATE_LIMIT_MAX=200

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Blockchain Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
LOYALTY_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
BLOCKCHAIN_NETWORK=polygon

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@opentable-clone.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=opentable-clone-uploads

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Voice/IoT Configuration
ALEXA_SKILL_ID=your_alexa_skill_id
GOOGLE_ACTIONS_PROJECT_ID=your_google_actions_project_id

# Virtual Experience Configuration
VR_STREAMING_SERVER=wss://vr-streaming.opentable-clone.com
VR_ASSETS_CDN=https://cdn.opentable-clone.com/vr-assets

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Monitoring Configuration
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Configuration
CORS_ORIGIN=http://localhost:3000,https://opentable-clone.com
HELMET_CSP_DIRECTIVES=default-src 'self'
SESSION_SECRET=your_session_secret_here

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Security Configuration
ADMIN_IPS=127.0.0.1,::1
TRUST_PROXY=1

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=1000
ENABLE_MEMORY_ALERTS=true

# Cache Configuration
ENABLE_REDIS_CACHE=true
ENABLE_STATIC_CACHE=true
ENABLE_API_CACHE=true

# API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration (for reservations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_public_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# AWS S3 Configuration (for photo uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=opentable-clone-uploads

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

