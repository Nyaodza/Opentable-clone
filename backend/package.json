{
  "name": "opentable-backend",
  "version": "1.0.0",
  "description": "OpenTable Clone Backend API",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "validate:env": "ts-node src/scripts/validate-environment.ts",
    "prestart": "npm run validate:env",
    "prestart:prod": "npm run validate:env",
    "docs:generate": "ts-node src/scripts/generate-docs.ts",
    "docs:serve": "npm run build && npm start",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run db:migrate && npm run db:seed",
    "db:init": "ts-node src/scripts/initDb.ts",
    "db:setup": "npm run db:init",
    "migrate:up": "ts-node src/database/migrate.ts up",
    "migrate:down": "ts-node src/database/migrate.ts down",
    "migrate:status": "ts-node src/database/migrate.ts status",
    "seed:up": "ts-node src/database/seed.ts up",
    "seed:down": "ts-node src/database/seed.ts down",
    "seed:reset": "ts-node src/database/seed.ts reset",
    "seed:status": "ts-node src/database/seed.ts status",
    "blockchain:compile": "npx hardhat compile",
    "blockchain:deploy": "npx hardhat run src/blockchain/deploy.js --network polygon",
    "blockchain:deploy:testnet": "npx hardhat run src/blockchain/deploy.js --network mumbai",
    "blockchain:verify": "npx hardhat verify --network polygon",
    "db:backup": "../scripts/database-backup.sh backup",
    "db:backup:full": "../scripts/database-backup.sh backup full",
    "db:backup:schema": "../scripts/database-backup.sh backup schema",
    "db:restore": "../scripts/database-restore.sh select",
    "db:restore:file": "../scripts/database-restore.sh restore",
    "db:backups:list": "../scripts/database-backup.sh list",
    "db:backups:cleanup": "../scripts/database-backup.sh cleanup",
    "load-test": "artillery run ../tests/load-test.yml",
    "load-test:report": "artillery run ../tests/load-test.yml --output reports/load-test.json && artillery report reports/load-test.json"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@aws-sdk/client-s3": "^3.844.0",
    "@tensorflow/tfjs-node": "^4.10.0",
    "amqplib": "^0.10.3",
    "apple-signin-auth": "^2.0.0",
    "aws-sdk": "^2.1467.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.4",
    "cache-manager": "^5.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "google-auth-library": "^10.1.0",
    "graphql": "^16.8.1",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.2",
    "@graphql-tools/schema": "^10.0.0",
    "ws": "^8.14.2",
    "ethers": "^6.8.1",
    "web3": "^4.2.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "limiter": "^2.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^3.3.0",
    "opossum": "^8.1.3",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^7.1.1",
    "rate-limit-redis": "^4.2.0",
    "sequelize": "^6.33.0",
    "sequelize-typescript": "^2.1.5",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "stripe": "^13.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.19.0",
    "umzug": "^3.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.8",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.8.7",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.13",
    "@types/opossum": "^8.1.2",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "hardhat": "^2.19.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
